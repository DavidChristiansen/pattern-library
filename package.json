    "jest-fixtures": "^0.6.0",
    "node-sass": "^4.12.0",
    "sealant": "0.0.3",
    "svg-sprite": "^1.4.0",
    "webpack": "^4.39.2",
    "webpack-cli": "^3.3.7"
  }
}
